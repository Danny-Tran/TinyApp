<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
  <title>TinyApp</title>
  <% include ./partials/_header.ejs %>
</head>
<body style="font-size:20px; padding:50px;">
    <!-- Add EJS code here -->
    <!-- <h1>TinnyApp</h1>
    <h3>My URLS</h3> -->
    <a href="https://www.google.com/">Create New TinyURL</a>
    <div>

        <ol>
            <% for(let url in urls) { %>
                <li><%= url + ": " + urls[url] %></li>
                <form method="POST" action="/urls/<%= url %>">
                    <input name="longURL" type="text"></input>
                    <button type="submit" value="Edit" class ="btn btn-success" >Edit</button>
                </form>

                <form method="GET" action="/urls/<%= url %>/delete">
                    <input type="submit" value="Delete" class ="btn btn-success" >
                </form>
                <br></br>
           <% } %>
        </ol>

        
        
    </div>

    
</body>
</html>