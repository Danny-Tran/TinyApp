<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
  <h1>TinyAPP</h1>
  <title>TinyURL</title>
</head>
<body style="font-size:20px; padding:50px;">
    <!-- Add EJS code here -->
    <% if (username){ %>
      <form method="POST" action="/logout">
      <h3>Currently login as <%=username%></h3>
        <button type="submit" value="Logout!" class ="btn btn-success" >Logout!</button>
      </form>
        <% } else { %>
        <form method="POST" action="/login">
        <input name="username" type="text" placeholder="Please enter your ID"></input> 
        <button type="submit" value="Login!" class ="btn btn-success" >Login</button>
      </form>

      <% } %>

    

    
</body>
</html>