<html lang="en">
<head>
  <meta charset="utf-8">
   <h1>TinyAPP</h1>
  <title>TinyURL</title>
</head>


<body style="font-size:20px; padding:50px;">
    <% if (username){ %>
      <form method="POST" action="/logout">
        <h3>Currently login as <%=username%></h3>
        <button type="submit" value="Logout!" class ="btn btn-success" >Logout!</button>
      </form>
      <% } else { %>
        <form method="POST" action="/login">
          <input name="username" type="text" placeholder="Please enter your ID"></input> 
          <button type="submit" value="Login!" class ="btn btn-success" >Login</button>
        </form>
        <% } %>
        <input name="password" type="password" placeholder="Please enter your Password"></input> 
        



    

    
</body>
</html>